<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#ccf2ff"
                android:centerColor="#66d9ff"
                android:endColor="#ccf2ff"
                android:angle="90"/>

            <stroke
                android:color="@color/black"
                android:width="1dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#66d9ff"
                android:centerColor="#ccf2ff"
                android:endColor="#66d9ff"
                android:angle="90"/>

            <stroke
                android:color="@color/black"
                android:width="1dp"/>
        </shape>
    </item>

</selector>